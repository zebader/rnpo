---
import Layout from "../../layouts/Layout.astro";
import Blockquote from "../../components/Blockquote.astro";
import { Image } from "astro:assets";
import { funFactsImages,FunFactsImagesId } from '../../utils/funFactsImages'
import { recommendationsImages,RecommendationsImagesId } from '../../utils/recommendationsImages'

import recommendations from "../../data/recommendations.json";
import aboutContent from "../../data/about.json";

const filteredRecommendations = recommendations.slice(1);
const { texts,funFacts } = aboutContent;
---

<Layout>
  <section class="max-w-screen-2xl m-auto px-7 prose">
    <div class="max-w-2xl m-auto">
      <h2 class="text-3xl font-bold">{texts.introTitle} üë©&zwj;üöÄ</h2>
      <p>{texts.introText}</p>
      <p>{texts.travelingText}</p>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 py-8">
      <video no-controls autoplay loop muted class="rounded-2xl not-prose bg-stone-100 aspect-[9/16] w-full bg-center bg-no-repeat bg-[url(/loader.gif)]">
        <source src="/raquel_tokyo.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <video no-controls autoplay loop muted class="rounded-2xl not-prose bg-stone-100 aspect-[9/16] w-full bg-center bg-no-repeat bg-[url(/loader.gif)]">
        <source src="/raquel_nikko.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <video no-controls autoplay loop muted class="rounded-2xl not-prose bg-stone-100 aspect-[9/16] w-full bg-center bg-no-repeat bg-[url(/loader.gif)]">
        <source src="/raquel_colombia.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <video no-controls autoplay loop muted class="rounded-2xl not-prose bg-stone-100 aspect-[9/16] w-full bg-center bg-no-repeat bg-[url(/loader.gif)]">
                <source src="/raquel_canarias.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>

    <div class="max-w-2xl m-auto">
      <h2 class="text-3xl font-bold">{texts.potteryTitle} üç∂ üé§</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <p>{texts.potteryText}</p>
        <video no-controls autoplay loop muted class="w-full rounded-2xl bg-stone-100 aspect-[9/16] bg-center bg-no-repeat bg-[url(/loader.gif)]">
          <source src="/raquel_pottery.mov" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
      <p>{texts.comedyText}</p>
      <video no-controls autoplay loop muted class="w-full my-16 rounded-2xl not-prose bg-stone-100 aspect-[16/9] bg-center bg-no-repeat bg-[url(/loader.gif)]">
        <source src="/raquel_comedy.webm" type="video/mp4">
        Your browser does not support the video tag.
      </video>
      <p>{texts.conclusionText}</p>
    </div>
  </section>
  <section class="max-w-screen-2xl m-auto px-7 prose">
    <div class="max-w-2xl m-auto flex flex-col justify-center items-center gap-16">
      <h2 class="text-3xl font-bold self-start">What they say</h2>
      {
        filteredRecommendations?.map((recommendation) => (
          <Blockquote
            content={recommendation.content}
            author={recommendation.author}
            image={recommendationsImages[recommendation.imageId]}
          />
        ))
      }
    </div>

  </section>
  
  <section class="py-24 flex flex-col justify-center items-center gap-16 max-w-2xl m-auto px-7 prose">
    {
      funFacts.map((content,index) => (
        <h2 class="text-3xl font-bold text-center">{`Fun Fact #${index + 1}`}</h2>
        <p class="text-center">{content.text}</p>
        <Image
        src={funFactsImages[content.imageId]}
        class="rounded-2xl w-full"
        alt={`Raquel fun fact ${content.imageId}`}
        width={900}
        height={900}
      />
      ))
    }
  </section>
</Layout>
