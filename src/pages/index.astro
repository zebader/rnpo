              class="flex flex-col items-center radius-lg shadow-lg rounded-2xl p-4 "
            >
              <Image
                transition:name={`img-${useCase.slug}`}
                src={`/${useCase.data.img}`}
                width={900}
                height={900}
                alt={useCase.data.title}
                class="w-full rounded-xl transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-120 duration-300"
