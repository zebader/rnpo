      width={300}
      height={300}
      alt="Raquel Navarro product owner header"
      loading="eager"
      class="hidden md:block rounded-2xl"
    />
  </header>
  <div class="p-4 w-full flex justify-center">
    <span class="radius-lg shadow-lg rounded-2xl p-4 font-bold text-xl"
      >Use cases</span
    >
  </div>
  <section class="grid grid-cols-1 gap-4 md:grid-cols-3 lg:grid-cols-3">
    {
      useCases.map((useCase) => {
        return (
          <article>
            <a
